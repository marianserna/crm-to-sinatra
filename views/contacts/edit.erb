<h1>Edit Contact</h1>

<form class="edit" action="/contacts/<%= @contact.id %>" method="post" >
  <input type="hidden" name="_method" value="put">

  <label for="edit_contact_first_name">
    <span>First Name</span>
    <input id="edit_contact_first_name" type="text" name="contact[first_name]" value="<%= @contact.first_name %>" placeholder="First Name">
  </label>

  <label for="edit_contact_last_name">
    <span>Last Name</span>
    <input id="edit_contact_last_name" type="text" name="contact[last_name]" value="<%= @contact.last_name %>" placeholder="Last Name">
  </label>

  <label for="edit_contact_email">
    <span>Email</span>
    <input id="edit_contact_email" type="email" name="contact[email]" value="<%= @contact.email %>" placeholder="Email">
  </label>

  <label for="edit_contact_note">
    <span>Note</span>
    <textarea name="contact[note]" placeholder="Note"><%= @contact.note %></textarea>
  </label>

  <label for="user-active">
    <span>User Active?</span>
    <input type="checkbox" name="contact[is_active]" id="user-active" value="1" <%= @contact.is_active ? 'checked' : nil %>>
  </label>

  <div class="new_actions">
    <button class="save_button" type="submit" name="button">Save</button>
    <a href="/contacts" class="cancel_button">Cancel</a>
  </div>
</form>
